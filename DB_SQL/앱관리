CREATE TABLE GITTB0001
(
    ID         INT NOT NULL AUTO_INCREMENT PRIMARY KEY COMMENT '등록순번',
    APP_SN    VARCHAR(50) COMMENT '앱순서',
    APP_NM    VARCHAR(50) COMMENT '앱명',
    CL_NM  VARCHAR(100) COMMENT '클러스터명',
    PGE_URL_AR  VARCHAR(200) COMMENT '링크 URL',
    DESC_TT     VARCHAR(4000) COMMENT '설명',
    SE_TF        CHAR(1) COMMENT '사용여부',
    BS_TF        CHAR(1) COMMENT '기본사용여부',
    RG_EN   VARCHAR(30) COMMENT '등록사번',
    CREATED_DATE       TIMESTAMP COMMENT '등록일시',
    ALT_EN  VARCHAR(30) COMMENT '수정사번',
    MODIFIED_DATE      TIMESTAMP COMMENT '수정일시'
);

ALTER TABLE GITTB0001 COMMENT='앱관리';
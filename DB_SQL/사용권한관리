CREATE TABLE GITTC0001
(
    ID         INT NOT NULL AUTO_INCREMENT PRIMARY KEY COMMENT '등록순번',
    GSN_ID      INT NOT NULL COMMENT '앱코드',
    APP_NM       VARCHAR(50) COMMENT '앱명',
    CL_NM  VARCHAR(100) COMMENT '클러스터명',
    PGE_URL_AR  VARCHAR(200) COMMENT '링크 URL',
    ROLE_ID     INT COMMENT '역할ID',
    USR_DCD     VARCHAR(50) COMMENT '부서명',
    USR_EN      VARCHAR(30) COMMENT '사용자ID',
    USR_NM      VARCHAR(30) COMMENT '사용자명',
    RG_EN   VARCHAR(30) COMMENT 'P아이디',
    EM_NM       CHAR(20) COMMENT '이메일',
    USE_YN  CHAR(1) COMMENT '사용유부 \',
    ALT_EN  VARCHAR(30) COMMENT '수정사번',
    CREATED_DATE       TIMESTAMP COMMENT '시작 일자',
    MODIFIED_DATE      TIMESTAMP COMMENT '종료 일자'
);

ALTER TABLE GITTC0001 COMMENT='사용자권한관리';


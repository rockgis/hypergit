CREATE TABLE GITTC0001
(
    GSN         INT NOT NULL AUTO_INCREMENT PRIMARY KEY COMMENT '등록순번',
    APP_NM       VARCHAR(50) COMMENT '앱명',
    DCD         VARCHAR(50) COMMENT '부서코드',
    USR_NM      VARCHAR(30) COMMENT '사용자명',
    USR_EN      VARCHAR(30) COMMENT '사용자ID',
     EM_NM       CHAR(20) COMMENT '이메일',
     RGEN   VARCHAR(30) COMMENT '등록사번',
        CREATED_DATE       TIMESTAMP COMMENT '등록일시',
        ALTEN  VARCHAR(30) COMMENT '수정사번',
        MODIFIED_DATE      TIMESTAMP COMMENT '수정일시'
);

ALTER TABLE GITTC0001 COMMENT='사용자권한관리';

CREATE TABLE GITTC0002
(
    UG_ID       VARCHAR(50) COMMENT '사용자그룹ID',
    UG_NM       VARCHAR(50) COMMENT '사용자그룹명',
    DESC_TT     VARCHAR(4000) COMMENT '설명',
    UG_AUZ_ID   VARCHAR(20) COMMENT '사용자그룹권한ID',
    QEE_SN      INT COMMENT '정렬순서',
    SE_F        CHAR(1) COMMENT '사용유무',
    EAR_EH_F    CHAR(1) COMMENT '초기설정여부',
     RGEN   VARCHAR(30) COMMENT '등록사번',
        CREATED_DATE       TIMESTAMP COMMENT '등록일시',
        ALTEN  VARCHAR(30) COMMENT '수정사번',
        MODIFIED_DATE      TIMESTAMP COMMENT '수정일시'
);

ALTER TABLE GITTC0002 COMMENT='사용자그룹관리';

CREATE TABLE GITTC0003
(
    ROLE_ID VARCHAR(50) COMMENT '역할ID',
    ROLE_NM VARCHAR(50) COMMENT '역할명',
    DESC_TT VARCHAR(4000) COMMENT '설명',
    RGEN   VARCHAR(30) COMMENT '등록사번',
       CREATED_DATE       TIMESTAMP COMMENT '등록일시',
       ALTEN  VARCHAR(30) COMMENT '수정사번',
       MODIFIED_DATE      TIMESTAMP COMMENT '수정일시'
);

ALTER TABLE GITTC0003 COMMENT='ROLE관리';



